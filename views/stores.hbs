<div class="row">
    <div class="col-md-12">
        <h2>Stores</h2>
        <a href="/stores/add" class="btn btn-success pull-right">Add New Store</a>

        <hr />
        <div class="table-responsive">
        <table class="table ">
            <thead>
            <tr>
                <th>Store Id</th>
                <th>Store Name</th>
                <th>Store Phone</th>
                <th>Store Address</th>
            </tr>
            </thead>
            <tbody>
            {{#each stores}}
                <tr>
                    <td><a href="/store/{{id}}">{{id}}</a></td>
                    <td><a href="/cars?make={{retailer}}">{{retailer}}</a></td>
                    <td><a href="tel:{{phone}}">{{phone}}</a></td>
                    <td>{{address}}, {{city}}</td>
                    <td><a href="/stores/delete/{{id}}" class="btn btn-danger">remove</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
        
    </div>
     {{#unless stores}}
        <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>