<div class="row">
    <div class="col-md-12">
        <h2>Cars</h2>
        <a href="/cars/add" class="btn btn-success pull-right">Add New Car</a>
        <hr />
        <div class="table-responsive">
        <table class="table ">
            <thead>
            <tr>
                <th>Car Make</th>
                <th>Car Model</th>
                <th>Car Year</th>
                <th>Car VIN</th>
            </tr>
            </thead>
            <tbody>
            {{#each cars}}
                <tr>
                    <td><a href="/stores?retailer={{make}}">{{make}}</a></td>
                    <td><a href="/car/{{vin}}">{{model}}</a></td>
                    <td><a href="/cars?year={{year}}">{{year}}</a></td>
                    <td><a href="/people?vin={{vin}}">{{vin}}</a></td>
                    <td><a href="/cars/delete/{{vin}}" class="btn btn-danger">remove</a></td>

                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
        
    </div>
     {{#unless cars}}
        <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>